<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

	<TextView
		android:id="@+id/businessTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_toStartOf="@+id/amountTextView"
		android:text="Business"
		/>

	<TextView
		android:id="@+id/dateTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignStart="@+id/businessTextView"
		android:layout_below="@+id/businessTextView"
		android:text="Date"
		android:textSize="12sp"
		android:textColor="@color/textLight"
		/>

	<TextView
		android:id="@+id/amountTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignTop="@+id/businessTextView"
		android:text="$1,000.00"
		/>

	<TextView
		android:id="@+id/categoryTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/dateTextView"
		android:layout_alignEnd="@+id/amountTextView"
		android:textSize="12sp"
		android:textColor="@color/textLight"
		android:text="Category"
		/>

</RelativeLayout>